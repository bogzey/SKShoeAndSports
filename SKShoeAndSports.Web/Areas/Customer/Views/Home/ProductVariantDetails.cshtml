@model Basket

    
<form method="post">
    <input type="hidden" asp-for="ProductVariantId" />
        <div class="container">
            <div class="row">
                
                <!-- col-lg-3 -->
                <div class="col-lg-9">
                    <div class="card mt-4">
                        <img class="card-img-top img-fluid" srcset="@Model.ProductVariant.Product.ImageUrl?width=900&height=400" src="@Model.ProductVariant.Product.ImageUrl">
                        <div class="card-body">
                            <h3 class="card-title"><b>@Model.ProductVariant.Product.Brand.Name @Model.ProductVariant.Product.Name</b></h3>
                            <h4><b>@Model.ProductVariant.Price.ToString("c")</b></h4>
                            <p class="card-text">@Html.Raw(Model.ProductVariant.Product.Description)</p>
                            
                            <span class="text-warning"></span>
                        </div>
                    </div>
                    <div class="card card-outline-secondary my-4">
                        <div class="card-header">
                            Product Details
                        </div>
                        <div class="card-body">
                            <p><b>Category: </b>@Model.ProductVariant.Product.Category.Name</p>
                            <p><b>Subcategory: </b>@Model.ProductVariant.Product.Subcategory.Name</p>
                            <p><b>Product Type: </b>@Model.ProductVariant.Product.ProductType.Name</p>
                            <p><b>Size: </b>@Model.ProductVariant.Size.Name</p>
                            <p><b>Colour: </b>@Model.ProductVariant.Colour.Name</p>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4 label-column">  <label asp-for="Quantity" class="control-label">Quantity</label></div>
                                <div class="col-sm-6 input-column"> <input asp-for="Quantity" class="form-control" style="margin-bottom:20px" type="number" /></div>
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <div class="col-12 col-md-6 pb-1">
                                    <a asp-action="ProductDetails" asp-route-id="@Model.ProductVariant.ProductId" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back</a>
                                </div>
                                <div class="col-12 col-md-6 pb-1">



                                    <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
